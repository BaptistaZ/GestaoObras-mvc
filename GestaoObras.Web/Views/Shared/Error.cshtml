@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
    ViewData["Icon"]  = "fa-solid fa-triangle-exclamation";
}

<section class="content pt-4 pb-4">
  <div class="container-fluid">
    <div class="alert alert-danger">
      <h4 class="alert-heading mb-2">
        <i class="fa-solid fa-bug me-2"></i> Ocorreu um erro ao processar o pedido.
      </h4>
      @if (Model.ShowRequestId)
      {
        <p class="mb-1"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
      }
      <p class="mb-3">Tenta novamente. Se o problema persistir, guarda o Request ID e reporta-me.</p>
      <div class="d-flex gap-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
          <i class="fa-solid fa-house"></i> Ir para o Dashboard
        </a>
        <button type="button" class="btn btn-outline-primary" onclick="location.reload()">
          <i class="fa-solid fa-rotate"></i> Recarregar página
        </button>
      </div>
    </div>
  </div>
</section>