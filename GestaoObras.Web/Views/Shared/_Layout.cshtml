@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-PT" data-bs-theme="light">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Gestão de Obras</title>

  <!-- CSS -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/admin-lte/dist/css/adminlte.min.css" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
  <div class="app-wrapper">

    @await Html.PartialAsync("_Navbar")   @* v4: app-header *@
    @await Html.PartialAsync("_Sidebar")  @* v4: app-sidebar *@

    <main class="app-main">
      <div class="app-content-header">
        <div class="container-fluid">
          <div class="row">
            <div class="col">
              <h1 class="app-page-title">@ViewData["Title"]</h1>
            </div>
          </div>
        </div>
      </div>

      <div class="app-content">
        <div class="container-fluid">
          @RenderBody()
        </div>
      </div>
    </main>

    @await Html.PartialAsync("_Footer")
  </div>

  <!-- (Opcional) validação client-side do template MVC -->
  <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation/dist/localization/messages_pt_PT.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

  <!-- JS core -->
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
  <script src="~/lib/admin-lte/dist/js/adminlte.min.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>