@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-PT" data-bs-theme="light">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Gestão de Obras</title>

  <!-- CSS -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/admin-lte/dist/css/adminlte.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
  <div class="app-wrapper">

    @await Html.PartialAsync("_Navbar")   @* app-header *@
    @await Html.PartialAsync("_Sidebar")  @* app-sidebar *@

    <main class="app-main">

      <!-- HEADER DA PÁGINA -->
      <div class="app-content-header">
        <div class="container-fluid">
          <div class="d-flex align-items-center gap-3">
            <button class="btn btn-outline-secondary btn-sm"
                    type="button"
                    data-lte-toggle="sidebar"
                    aria-label="Alternar menu">
              <i class="fa-solid fa-bars"></i>
            </button>

            <h1 class="app-page-title mb-0">
              @if (ViewData["Icon"] is string icon && !string.IsNullOrWhiteSpace(icon))
              {
                <i class="@icon me-2"></i>
              }
              @ViewData["Title"]
            </h1>
          </div>
        </div>
      </div>

      <!-- CONTEÚDO -->
      <div class="app-content">
        <div class="container-fluid">
          @await Html.PartialAsync("_Alerts")
          @RenderBody()
        </div>
      </div>

    </main>

    @await Html.PartialAsync("_Footer")

  </div> <!-- /app-wrapper -->

  <!-- (Opcional) validação client-side do template MVC -->
  <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation/dist/localization/messages_pt_PT.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

  <!-- JS core -->
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
  <script src="~/lib/admin-lte/dist/js/adminlte.min.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>