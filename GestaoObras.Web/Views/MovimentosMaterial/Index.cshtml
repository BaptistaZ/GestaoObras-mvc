@model IEnumerable<GestaoObras.Domain.Entities.MovimentoMaterial>
@using GestaoObras.Domain.Enums

@{
    ViewData["Title"] = "Movimentos";

    var firstItem = Model.FirstOrDefault() ?? new GestaoObras.Domain.Entities.MovimentoMaterial
    {
        Obra = new GestaoObras.Domain.Entities.Obra(),
        Material = new GestaoObras.Domain.Entities.Material()
    };

    // Agora recebe o enum OperacaoStock
    string BadgeForOperacao(OperacaoStock op) =>
        op == OperacaoStock.Entrada ? "bg-primary"
      : op == OperacaoStock.Saida   ? "bg-warning text-dark"
      : "bg-secondary";
}

<div class="card card-outline card-primary">
  <div class="card-header d-flex align-items-center gap-2">
    <h3 class="card-title mb-0">Movimentos de Material</h3>
    <div class="ms-auto">
      <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa-solid fa-plus"></i> Novo Movimento
      </a>
    </div>
  </div>

  <div class="card-body">
    @if (!Model.Any())
    {
      <div class="alert alert-info mb-0">Sem resultados.</div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>@Html.DisplayNameFor(m => firstItem.Quantidade)</th>
              <th>@Html.DisplayNameFor(m => firstItem.DataHora)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Operacao)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Obra)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Material)</th>
              <th class="text-end" style="width:200px;">Ações</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Quantidade</td>
              <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
              <td>
                <span class="badge @BadgeForOperacao(item.Operacao)">
                  @item.Operacao.ToString()
                </span>
              </td>
              <td>@(item?.Obra?.Descricao ?? "-")</td>
              <td>@(item?.Material?.Nome ?? "-")</td>
              <td class="text-end text-nowrap">
                <a class="btn btn-sm btn-outline-primary"   asp-action="Edit"    asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-sm btn-outline-danger"    asp-action="Delete"  asp-route-id="@item.Id">Apagar</a>
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>