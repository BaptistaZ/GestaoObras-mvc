@model IEnumerable<GestaoObras.Domain.Entities.MovimentoMaterial>
@using GestaoObras.Domain.Enums

@{
    ViewData["Title"] = "Movimentos de Material";

    // Helper para badge local
    string BadgeForOperacao(OperacaoStock op) =>
        op == OperacaoStock.Entrada ? "badge bg-success"
      : op == OperacaoStock.Saida   ? "badge bg-danger"
      : "badge bg-secondary";

    // Segurança para DisplayNameFor quando a lista pode estar vazia
    var first = Model.FirstOrDefault() ?? new GestaoObras.Domain.Entities.MovimentoMaterial();
}

<div class="card card-outline card-primary">
  <div class="card-header d-flex align-items-center gap-2">
    <h3 class="card-title mb-0">Movimentos de Material</h3>
    <div class="ms-auto">
      <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa-solid fa-plus"></i> Novo Movimento
      </a>
    </div>
  </div>

  <div class="card-body p-0">
    @if (!Model.Any())
    {
      <div class="p-3">
        <div class="alert alert-info mb-0">Sem movimentos registados.</div>
      </div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>@Html.DisplayNameFor(m => first.DataHora)</th>
              <th>@Html.DisplayNameFor(m => first.Obra)</th>
              <th>@Html.DisplayNameFor(m => first.Material)</th>
              <th>@Html.DisplayNameFor(m => first.Operacao)</th>
              <th class="text-end">@Html.DisplayNameFor(m => first.Quantidade)</th>
              <th class="text-end" style="width:220px;">Ações</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var item in Model.OrderByDescending(x => x.DataHora))
          {
            <tr>
              <td>@item.DataHora.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
              <td>@item.Obra?.Descricao</td>
              <td>@item.Material?.Nome</td>
              <td><span class="@BadgeForOperacao(item.Operacao)">@item.Operacao</span></td>
              <td class="text-end">@item.Quantidade</td>
              <td class="text-end text-nowrap">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">
                  Detalhes
                </a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                  Editar
                </a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                  Apagar
                </a>
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>