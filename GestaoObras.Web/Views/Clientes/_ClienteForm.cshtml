@model GestaoObras.Domain.Entities.Cliente

<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

<div class="row g-3">
  <div class="col-md-6">
    <label asp-for="Nome" class="form-label"></label>
    <input asp-for="Nome" class="form-control" placeholder="Ex.: João Silva" autocomplete="name" autofocus />
    <span asp-validation-for="Nome" class="text-danger"></span>
  </div>

  <div class="col-md-6">
    <label asp-for="NIF" class="form-label"></label>
    <input asp-for="NIF" class="form-control" inputmode="numeric" pattern="\d{9}" placeholder="9 dígitos" autocomplete="off" />
    <span class="form-text">9 dígitos (ex.: 123456789)</span>
    <span asp-validation-for="NIF" class="text-danger"></span>
  </div>

  <div class="col-md-8">
    <label asp-for="Morada" class="form-label"></label>
    <input asp-for="Morada" class="form-control" placeholder="Rua, n.º, localidade" autocomplete="street-address" />
    <span asp-validation-for="Morada" class="text-danger"></span>
  </div>

  <div class="col-md-6">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" placeholder="nome@dominio.pt" autocomplete="email" />
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>

  <div class="col-md-6">
    <label asp-for="Telefone" class="form-label"></label>
    <input asp-for="Telefone" class="form-control" inputmode="tel" placeholder="Ex.: 912345678" autocomplete="tel" />
    <span asp-validation-for="Telefone" class="text-danger"></span>
  </div>
</div>