@model IEnumerable<GestaoObras.Domain.Entities.Obra>

@{
    ViewData["Title"] = "Obras";

    var firstItem = Model.FirstOrDefault() ?? new GestaoObras.Domain.Entities.Obra
    {
        Cliente = new GestaoObras.Domain.Entities.Cliente()
    };
    string FormatCoord(double? v) => v.HasValue ? v.Value.ToString("0.00000") : "-";
}

<div class="card card-outline card-primary">
  <div class="card-header d-flex align-items-center gap-2">
    <h3 class="card-title mb-0">Lista de Obras</h3>
    <div class="ms-auto">
      <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa-solid fa-plus"></i> Nova Obra
      </a>
    </div>
  </div>

  <div class="card-body">
    @if (!Model.Any())
    {
      <div class="alert alert-info mb-0">Sem resultados.</div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>@Html.DisplayNameFor(m => firstItem.Nome)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Descricao)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Morada)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Latitude)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Longitude)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Ativa)</th>
              <th>@Html.DisplayNameFor(m => firstItem.Cliente)</th>
              <th class="text-end" style="width:200px;">Ações</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Nome</td>
              <td>@item.Descricao</td>
              <td>@item.Morada</td>
              <td>@FormatCoord(item.Latitude)</td>
              <td>@FormatCoord(item.Longitude)</td>
              <td>
                @if (item.Ativa)
                {
                  <span class="badge bg-success">Ativa</span>
                }
                else
                {
                  <span class="badge bg-secondary">Inativa</span>
                }
              </td>
              <td>@(item.Cliente?.Email ?? "-")</td>
              <td class="text-end text-nowrap">
                <a class="btn btn-sm btn-outline-primary"   asp-action="Edit"    asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-sm btn-outline-danger"    asp-action="Delete"  asp-route-id="@item.Id">Apagar</a>
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>