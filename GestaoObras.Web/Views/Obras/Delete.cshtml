@model GestaoObras.Domain.Entities.Obra
@{
    ViewData["Title"] = "Apagar Obra";
    string FormatCoord(double? v) => v.HasValue ? v.Value.ToString("0.00000") : "-";
}

<div class="card card-outline card-danger">
  <div class="card-header">
    <h3 class="card-title mb-0">Confirmar eliminação</h3>
  </div>

  <div class="card-body">
    <p class="text-danger mb-3">
      Tem a certeza que pretende <strong>apagar</strong> esta obra?
    </p>

    <dl class="row mb-0">
      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nome)</dt>
      <dd class="col-sm-9">@Html.DisplayFor(m => m.Nome)</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Descricao)</dt>
      <dd class="col-sm-9">@Html.DisplayFor(m => m.Descricao)</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Morada)</dt>
      <dd class="col-sm-9">@Html.DisplayFor(m => m.Morada)</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Latitude)</dt>
      <dd class="col-sm-9">@FormatCoord(Model?.Latitude)</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Longitude)</dt>
      <dd class="col-sm-9">@FormatCoord(Model?.Longitude)</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Ativa)</dt>
      <dd class="col-sm-9">@(Model?.Ativa == true ? "Sim" : "Não")</dd>

      <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Cliente)</dt>
      <dd class="col-sm-9">
        @(Model?.Cliente is null ? "-" : $"{Model.Cliente.Nome} ({Model.Cliente.Email})")
      </dd>
    </dl>
  </div>

  <div class="card-footer d-flex gap-2">
    <form asp-action="Delete" class="d-inline">
      <input type="hidden" asp-for="Id" />
      <button type="submit" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> Apagar
      </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary">
      <i class="fa-solid fa-arrow-left"></i> Cancelar
    </a>
  </div>
</div>